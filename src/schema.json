{
  "title": "Wall",
  "type": "object",
  "properties": {
    "album": {
      "type": "object",
      "title": "Album Selector",
      "albumSelector": true,
      "default": {
        "shortcut": "atMxufhj"
      }
    },

    "albumOptions": {
      "title": "Album Options",
      "type": "object",
      "properties": {
        "sort": {
          "title": "Sorting",
          "type": "string",
          "default": "time",
          "oneOf": [
            {
              "pattern": "time",
              "title": "Newest First"
            },
            {
              "pattern": "hearts",
              "title": "Highest Rated"
            }
          ]
        },
        "per_page": {
          "title": "Photos per page",
          "default": 30,
          "type": "integer"
        }
      }
    },
    "enable": {
      "title": "Wall Options",
      "type": "object",
      "properties": {
        "masonry": {
          "type": "boolean",
          "default": true
        },
        "infiniteScroll": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "itemViewOptions": {
      "title": "Tile Settings",
      "type": "object",
      "properties": {
        "enable": {
          "title": "Show",
          "type": "object",
          "group": true,
          "properties": {
            "avatar": {
              "type": "boolean",
              "default": true
            },
            "username": {
              "type": "boolean",
              "default": true
            },
            "caption": {
              "type": "boolean",
              "default": true
            },
            "time": {
              "type": "boolean",
              "default": true
            },
            "hearting": {
              "title": "Voting",
              "type": "boolean",
              "default": true
            }
          }
        },

        "width": {
          "type": "integer",
          "default": 250
        },
        "margin": {
          "type": "integer",
          "default": 10
        },
        "padding": {
          "type": "integer",
          "default": 10
        },

        "lightboxOptions": {
          "title": "Lightbox Settings",
          "type": "object",
          "properties": {
            "width": {
              "type": "integer",
              "default": 400
            },
            "enable": {
              "title": "Show",
              "type": "object",
              "group": true,
              "properties": {
                "avatar": {
                  "type": "boolean",
                  "default": true
                },
                "username": {
                  "type": "boolean",
                  "default": true
                },
                "caption": {
                  "type": "boolean",
                  "default": true
                },
                "time": {
                  "type": "boolean",
                  "default": true
                },
                "hearting": {
                  "title": "Voting",
                  "type": "boolean",
                  "default": true
                },

                "sharing": {
                  "group": true,
                  "type": "object",
                  "properties": {
                    "facebook": {
                      "type": "boolean",
                      "default": true
                    },
                    "twitter": {
                      "type": "boolean",
                      "default": true
                    },
                    "tumblr": {
                      "type": "boolean",
                      "default": true
                    },
                    "pinterest": {
                      "type": "boolean",
                      "default": true
                    },
                    "googleplus": {
                      "title": "Google+",
                      "type": "boolean",
                      "default": true
                    }
                  }
                }
              }
            }
          }
        }
      }
    },

    "awesmOptions": {
      "title": "Sharing Options",
      "type": "object",
      "properties": {
        "facebook": {
          "type": "object",
          "properties": {
            "app_id": {
              "title": "Application ID",
              "type": "string",
              "default": "418143708282236"
            },
            "redirect_uri": {
              "title": "Redirect URI",
              "type": "string",
              "default": "http://www.getchute.com/close"
            },
            "caption": {
              "type": "string"
            },
            "title": {
              "type": "string"
            },
            "description": {
              "type": "string"
            }
          }
        },
        "twitter": {
          "type": "object",
          "properties": {
            "caption": {
              "type": "string"
            },
            "via": {
              "type": "string"
            },
            "hashtags": {
              "type": "string"
            },
            "related": {
              "type": "string"
            }
          }
        },
        "pinterest": {
          "type": "object",
          "properties": {
            "caption": {
              "type": "string"
            }
          }
        },
        "tumblr": {
          "type": "object",
          "properties": {
            "caption": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
